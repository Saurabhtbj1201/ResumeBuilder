<%- include('partials/header', { title: 'Build Your Resume' }) %>

<h1>Enter Your Resume Details</h1>
<form action="/submit-resume" method="POST" class="resume-form">
    
    <h2>Basic Details</h2>
    <div>
        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="fullName" required>
    </div>
    <div>
        <label>Date of Birth:</label>
        <div style="display: flex; gap: 10px;">
            <select id="dobDay" name="dobDay" required>
                <option value="">Day</option>
                <% for(let i = 1; i <= 31; i++) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
            <select id="dobMonth" name="dobMonth" required>
                <option value="">Month</option>
                <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
                <% months.forEach((month, index) => { %>
                    <option value="<%= index + 1 %>"><%= month %></option>
                <% }); %>
            </select>
            <select id="dobYear" name="dobYear" required>
                <option value="">Year</option>
                <% const currentYear = new Date().getFullYear(); %>
                <% for(let i = currentYear; i >= currentYear - 100; i--) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
        </div>
    </div>
    <div>
        <label for="currentJobTitle">Current Job Title (if any):</label>
        <input type="text" id="currentJobTitle" name="currentJobTitle">
    </div>
    <div>
        <label for="currentCompany">Current Company (if any):</label>
        <input type="text" id="currentCompany" name="currentCompany">
    </div>

    <h2>Contact Information</h2>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required>
    </div>

    <h2>Summary</h2>
    <div>
        <label for="summary">Professional Summary:</label>
        <textarea id="summary" name="summary" rows="4"></textarea>
    </div>

    <h2>Experience</h2>
    <div id="experienceContainer">
        <div class="experience-entry">
            <h4>Experience Entry 1</h4>
            <div>
                <label for="expCompany">Company:</label>
                <input type="text" name="expCompany[]" required>
            </div>
            <div>
                <label for="expRole">Role:</label>
                <input type="text" name="expRole[]" required>
            </div>
            <div>
                <label for="expDuration">Duration (e.g., Jan 2020 - Present):</label>
                <input type="text" name="expDuration[]" required>
            </div>
            <div>
                <label for="expDescription">Description:</label>
                <textarea name="expDescription[]" rows="3" required></textarea>
            </div>
        </div>
    </div>
    <button type="button" id="addExperienceBtn" class="btn btn-secondary">Add More Experience</button>
    
    <h2>Projects</h2>
    <div id="projectsContainer">
        <div class="project-entry">
            <h4>Project Entry 1</h4>
            <div>
                <label for="projTitle">Project Title:</label>
                <input type="text" name="projTitle[]">
            </div>
            <div>
                <label for="projTechStack">Tech Stack (comma-separated):</label>
                <input type="text" name="projTechStack[]">
            </div>
            <div>
                <label for="projDescription">Description:</label>
                <textarea name="projDescription[]" rows="3"></textarea>
            </div>
            <div>
                <label for="projStatus">Status (e.g., Completed, In Progress):</label>
                <input type="text" name="projStatus[]">
            </div>
        </div>
    </div>
    <button type="button" id="addProjectBtn" class="btn btn-secondary">Add More Projects</button>

    <h2>Skills</h2>
    <div>
        <label for="skills">Skills (comma-separated, e.g., JavaScript, Python, Teamwork):</label>
        <input type="text" id="skills" name="skills">
    </div>

    <h2>Education</h2>
    <div id="educationContainer">
        <div class="education-entry">
            <h4>Education Entry 1</h4>
            <div>
                <label for="eduDegree">Degree:</label>
                <input type="text" name="eduDegree[]">
            </div>
            <div>
                <label for="eduInstitution">Institution:</label>
                <input type="text" name="eduInstitution[]">
            </div>
            <div>
                <label for="eduYear">Year (e.g., 2020 or 2016-2020):</label>
                <input type="text" name="eduYear[]">
            </div>
            <div>
                <label for="eduCgpa">CGPA/Percentage:</label>
                <input type="text" name="eduCgpa[]">
            </div>
        </div>
    </div>
    <button type="button" id="addEducationBtn" class="btn btn-secondary">Add More Education</button>

    <h2>Address</h2>
    <div>
        <label for="addressLine1">Address Line 1:</label>
        <input type="text" id="addressLine1" name="addressLine1">
    </div>
    <div>
        <label for="city">City:</label>
        <input type="text" id="city" name="city">
    </div>
    <div>
        <label for="district">District:</label>
        <input type="text" id="district" name="district">
    </div>
    <div>
        <label for="state">State:</label>
        <input type="text" id="state" name="state">
    </div>
    <div>
        <label for="country">Country:</label>
        <input type="text" id="country" name="country">
    </div>
    <div>
        <label for="postalCode">Postal Code:</label>
        <input type="text" id="postalCode" name="postalCode">
    </div>

    <h2>Social Links (Optional)</h2>
    <div>
        <label for="github">GitHub URL:</label>
        <input type="url" id="github" name="github" placeholder="https://github.com/yourusername">
    </div>
    <div>
        <label for="linkedin">LinkedIn URL:</label>
        <input type="url" id="linkedin" name="linkedin" placeholder="https://linkedin.com/in/yourprofile">
    </div>
    <div>
        <label for="portfolio">Portfolio URL:</label>
        <input type="url" id="portfolio" name="portfolio" placeholder="https://yourportfolio.com">
    </div>
    <div>
        <label for="instagram">Instagram URL:</label>
        <input type="url" id="instagram" name="instagram" placeholder="https://instagram.com/yourusername">
    </div>

    <h2>Hobbies (Optional)</h2>
    <div>
        <label for="hobbies">Hobbies (comma-separated):</label>
        <input type="text" id="hobbies" name="hobbies">
    </div>

    <button type="submit" class="btn btn-primary">Submit Resume</button>
</form>

<%- include('partials/footer') %>
